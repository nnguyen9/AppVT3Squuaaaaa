<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logInButton"
        android:layout_marginTop="59dp"
        android:src="@mipmap/signinbutton"
        android:adjustViewBounds="true"
        android:maxWidth="150dp"
        android:maxHeight="70dp"
        android:layout_below="@+id/pwordEditText"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/numberEditText"
        android:hint="Phone Number"
        android:maxLength="10"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwordEditText"
        android:hint="Password"
        android:layout_below="@+id/numberEditText"
        android:layout_alignStart="@+id/numberEditText"
        android:textSize="20dp"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/logo"
        android:layout_marginBottom="90dp"
        android:layout_above="@+id/numberEditText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
